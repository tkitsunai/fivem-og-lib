{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist/app",
    "baseUrl": "./",
    "rootDir": "./"
  },
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
