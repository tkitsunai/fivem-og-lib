{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist/app",
    "baseUrl": ".",
    "rootDir": "./",
    "types": ["@citizenfx/server", "@citizenfx/client", "node"]
  },
  "include": ["src/**/*", "test"],
  "exclude": ["node_modules"]
}
