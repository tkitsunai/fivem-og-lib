{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist",
    "baseUrl": "./",
    "rootDir": "./",
    "types": ["@citizenfx/server", "@citizenfx/client", "node"]
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}
